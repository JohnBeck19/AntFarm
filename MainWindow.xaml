<Window x:Class="AntFarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ant Farm Simulation" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Effect>
        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Black" Opacity="0.3"/>
    </Window.Effect>
    <Border Background="#CCFFFFFF" CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF">
        <Grid>
            <Border x:Name="FarmBorder" 
                    Background="#33FFFFFF" 
                    BorderBrush="#66FFFFFF" 
                    BorderThickness="2" 
                    Margin="10">
                <Canvas x:Name="AntFarmCanvas" 
                        Background="Transparent"
                        Width="760"
                        Height="560">
                    <!-- Ant farm content will be drawn here -->
                </Canvas>
            </Border>
            <Button Content="X" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="5"
                    Width="30"
                    Height="30"
                    Click="CloseButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FF666666"/>
        </Grid>
    </Border>
</Window> 